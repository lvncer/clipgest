{
  "manifest_version": 3,
  "name": "Clipgest Chrome拡張機能",
  "version": "0.4.0",
  "description": "気になった Web ページの URL を右クリックから「Save link」を選ぶだけで、一瞬で保存します。",
  "permissions": ["contextMenus", "storage", "activeTab"],
  "host_permissions": ["https://quicklinks-hftb.onrender.com/*"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://www.clipgest.com/*",
        "https://clipgest.com/*",
        "https://quicklinks-zeta.vercel.app/*"
      ],
      "js": ["dist/web-auth-bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Clipgest"
  }
}
